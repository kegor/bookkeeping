@using System.Globalization
@using Microsoft.Ajax.Utilities
@model IEnumerable<DataAccess.Expense>

@{
    ViewBag.Title = "Expenses";
}

<h2>Expenses by Category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)
        </td>
        <td>
            @Html.ActionLink(@Html.DisplayFor(modelItem => item.Category).ToString(), "Index", new { categoryName=item.Category })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

<p>
    <b>Total</b>: @Model.Sum(x => x.Sum).ToString(CultureInfo.InvariantCulture)
</p>
